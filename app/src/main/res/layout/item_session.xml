<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date et durée -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/sessionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2025 10:30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sessionDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45m 30s"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Métriques en grille -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <!-- Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/sessionDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.5 km"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Calories -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/sessionCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 kcal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Vitesse moyenne -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vit. moy"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/sessionAvgSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.5 km/h"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Puissance moyenne -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puiss. moy"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/sessionAvgPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="220 W"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Bouton supprimer (prend 2 colonnes) -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:layout_columnSpan="2"
                android:text="@string/delete_session"
                android:textSize="12sp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/red" />

        </GridLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
